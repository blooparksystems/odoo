<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="AddressColumn">
        <span t-if="street">
            <t t-esc="street"></t>
            <br/>
        </span>
        
        <span t-if="street2">
            <t t-esc="street2"></t>
            <br/>
        </span>
        
        <span t-if="zip">
            <t t-esc="zip"></t>
        </span>  
        <span>
            <t t-esc="city"><br/></t>
        </span>
        
        <span t-if="country">
            <t t-esc="country"></t>
        </span>
    </t>

    <t t-name="Address">
        <span class="oe_form_field">
            <input type="text" name="street" style="width: 100%" placeholder="Strasse"/>
            <br/>
            <input type="text" name="street2" style="width: 100%" placeholder="Zusatz"/>
            <br/>
            <input type="text" name="zip" style="width: 33%" placeholder="PLZ"/>
            <input type="text" name="city" style="width: 63%;float:right;" placeholder="Stadt"/>
            <br/>
            <select type="text" name="country_id" model="res.country" style="width: 100%" placeholder="Land"/>
        </span>
    </t>

</templates>
