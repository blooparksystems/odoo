<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_partner_form" model="ir.ui.view">
      <field name="name">res.partner.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="/form/sheet/group[1]/group[1]" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
        <field name="phone" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
        <field name="mobile" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
        <field name="fax" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
        <field name="title" position="after">
          <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>
        </field>
        <page string="Contacts" position="before">
          <page string="Contact Information" autofocus="autofocus" version="7.0">
            <group>
              <field name="partner_address_ids" mode="tree" nolabel="1" class="address_tree">
                <tree editable="top" nolabel="1" class="partner_address_table">
                  <field name="type" string="Addresses"/>
                  <field name="street" placeholder="Street" string=""/>
                  <field name="street2" placeholder="Street2" string=""/>
                  <field name="zip" placeholder="Zip" string=""/>
                  <field name="city" placeholder="City" string=""/>
                  <field name="state_id" placeholder="State" string=""/>
                  <field name="country_id" placeholder="Country" string=""/>
                  <field name="preferred"/>
                </tree>
              </field>
            </group>
            <group>
              <field name="partner_email_ids" mode="tree" nolabel="1" class="email_tree">
                <tree editable="top" nolabel="1" class="partner_email_table">
                  <field name="type" string="Email Addresses"/>
                  <field name="name" widget="email" string=""/>
                  <field name="preferred"/>
                </tree>
              </field>
              <field name="partner_phone_ids" mode="tree" nolabel="1" class="phone_tree">
                <tree editable="top" nolabel="1" class="partner_phone_table">
                  <field name="type" string="Phones"/>
                  <field name="name" string=""/>
                </tree>
              </field>
            </group>
          </page>
        </page>
      </field>
    </record>

    <record id="view_partner_simple_form" model="ir.ui.view">
      <field name="name">res.partner.simplified.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_simple_form"/>
      <field name="arch" type="xml">
        <field name="email" position="attributes">
          <attribute name="readonly">1</attribute>
        </field>
        <field name="phone" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
        <field name="mobile" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
        <xpath expr="//group[last()]" position="after">
          <notebook>
            <page string="Email Addresses">
              <group>
                <field name="partner_email_ids" mode="tree" nolabel="1">
                  <tree editable="top" nolabel="1" class="partner_email_table">
                    <field name="type" string="Email Addresses"/>
                    <field name="name" widget="email" string=""/>
                    <field name="preferred"/>
                  </tree>
                </field>
              </group>
            </page>
          </notebook>
        </xpath>
      </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
      <field name="name">res.partner.select</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_res_partner_filter"/>
      <field name="arch" type="xml">
        <field name="name" position="after">
          <field name="street" string="Street" filter_domain="[('partner_address_ids.street','=like', self + '%')]"/>
          <field name="zip" string="ZIP" filter_domain="[('partner_address_ids.zip','=like', self + '%')]"/>
          <field name="city" string="City" filter_domain="[('partner_address_ids.city','=like', self + '%')]"/>
        </field>
      </field>
    </record>

    <record id="view_partner_tree" model="ir.ui.view">
      <field name="name">res.partner.tree</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_tree"/>
      <field name="arch" type="xml">
        <field name="phone" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
      </field>
    </record>

  </data>
</openerp>